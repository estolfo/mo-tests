{
    "clientSetUp": {
        "hosts": [
            "mongosA", 
            "mongosB"
        ], 
        "options": {
            "heartbeatFrequency": 1
        }
    }, 
    "description": "Successful read from restarted mongos", 
    "initConfig": {
        "id": "integration_tests", 
        "routers": [
            {
                "server_id": "mongosA"
            }, 
            {
                "server_id": "mongosB"
            }
        ], 
        "shards": [
            {
                "id": "sh1"
            }
        ]
    }, 
    "phases": [
        {
            "MOOperation": {
                "method": "POST", 
                "payload": {
                    "action": "stop"
                }, 
                "uri": "/servers/mongosA"
            }
        }, 
        {
            "clientOperation": {
                "operation": "findOne", 
                "outcome": {
                    "ok": 0
                }
            }
        }, 
        {
            "MOOperation": {
                "method": "POST", 
                "payload": {
                    "action": "restart"
                }, 
                "uri": "/servers/mongosA"
            }
        }
    ], 
    "tests": [
        {
            "clientOperation": {
                "operation": "findOne", 
                "outcome": {
                    "ok": 1
                }
            }
        }
    ], 
    "type": "sharded_clusters"
}
